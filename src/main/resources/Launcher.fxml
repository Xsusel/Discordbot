<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.launcher.LauncherController">
    <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter your username" />

        <Label text="Minecraft Version:" />
        <ComboBox fx:id="versionComboBox" prefWidth="200.0" />

        <Button fx:id="launchButton" mnemonicParsing="false" onAction="#launchGame" text="Launch Minecraft" />

        <Separator prefWidth="200.0" />

        <Label text="Search for Modpacks on CurseForge:" />
        <TextField fx:id="searchField" promptText="Enter modpack name" />
        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchForModpacks" text="Search" />

        <ListView fx:id="modpackListView" prefHeight="200.0" />

        <Button fx:id="installButton" mnemonicParsing="false" onAction="#installModpack" text="Install Modpack" />
        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#checkForUpdates" text="Check for Updates" />
    </VBox>

    <ProgressBar fx:id="progressBar" layoutY="580.0" prefWidth="800.0" progress="0.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
    <Label fx:id="statusLabel" layoutY="580.0" text="Ready" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="5.0" />
</AnchorPane>